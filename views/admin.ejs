
<!Doctype html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="renderer" content="webkit">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/main.css" rel="stylesheet">
	<title> 后台管理 </title>
</head>
<body>
	<div class="modal fade" id="myModal"  >
	    <div class="modal-dialog">
	        <div class="modal-content">
	            <div class="modal-header">
	                <button type="button" class="close" data-dismiss="modal">&times;</button>
	                <h4 class="modal-title" id="myModalLabel">确认删除</h4>
	            </div>
	            <div class="modal-body">您确认要删除? 
	            	<span id="modalblogid"></span>
	            </div>
	            <div class="modal-footer">
	                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
	                <button type="button" class="btn btn-primary" id="modalconfirm">确认删除</button>
	            </div>
	        </div>
	    </div>
	</div>
	
	<nav class="navbar navbar-default">
	  	<div class="container-fluid">
		    <div class="navbar-header">
		      <a class="navbar-brand" href="/admin/home">后台管理</a>
		    </div>
		    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav">
					<li class="active"><a href="/admin">主页</a></li>
					<li ><a href="/admin/addarticle">添加文章</a></li>
					<li ><a href="/admin/tag">标签管理</a></li>
				</ul>
			    <ul class="nav navbar-nav navbar-right">    
			    	<li><a href="javascript:void(0);">您好，管理员</a></li>
			    </ul>
		    </div>
	 	</div>
	</nav>
	<ol class="breadcrumb">
		<li class="active">主页</li>
	</ol>
	
	<!-- <input type="search" placeholder=" 输入班级ID" id="searchClass">
	<span class="text-danger hide"> &nbsp;找不到该班级！ </span> -->

	<table class="table table-hover">
	  	<tr id="headtable">
	  		<th>#</th>
	  		<th>id</th>
	  		<th>文章标题</th>
	  		<th>发布时间</th>
	  		<th>操作</th>
		</tr>
		<% for(var i=0; i<article.length; i++){ %>
			<tr name="<%= article[i]._id %>">
				<td> <%= i+1 %> </td>
				<td> <%= article[i]._id %> </td>
				<td> <%= article[i].title %> </td>
				<td> <%= article[i].date %> </td>
				<td>
					<a href="/admin/update?q=<%=article[i]._id %>"> <button type="button" class="btn btn-success btn-sm">修改</button> </a>
					<button type="button" class="btn btn-warning btn-sm deleteblog" data-toggle="modal" data-target="#myModal" name="<%=article[i]._id %>">删除</button>
				</td>
			</tr>
		<% } %>
	</table>

	<ul class="pager">
		<% if(prebtn){ %>
		<li><a href="/admin/?page=<%=page-1%>">上一页</a></li>
		<% } %>
	    <% if(nextbtn){ %>
		<li><a href="/admin/?page=<%=page+1%>">下一页</a></li>
		<% } %>
	</ul>


	<footer class="text-center">
		<hr/><h5> Copyright © New-Captain  </h5>
	</footer>
	<script type="text/javascript" src="/js/jquery-3.2.1.min.js"></script>
	<script type="text/javascript" src="/js/bootstrap.min.js"></script>
	<script type="text/javascript" src="/js/mainAPI.js"></script>
</body>



</html>
